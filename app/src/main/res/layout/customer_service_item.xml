<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right">

    <androidx.cardview.widget.CardView
        android:id="@+id/emp_avatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/whiteOrange"
        app:cardCornerRadius="100dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="you"
            android:textColor="@color/black"
            android:textStyle="bold">
        </TextView>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/dialogColor"
            app:cardCornerRadius="5dp">

            <TextView
                android:id="@+id/text_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="15sp"
                android:text="ssdwdadawdadawdawdawdadawdaw"
                android:textColor="@color/black"
                android:visibility="gone"></TextView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/audio_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
                <ImageView
                    android:id="@+id/left_audio"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/left_audio_amin">
                </ImageView>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageView
                    android:id="@+id/right_audio"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/right_audio_amin">
                </ImageView>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/image_message"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:src="@drawable/default_avatar_male"
            android:visibility="gone"></ImageView>

        <FrameLayout
            android:visibility="gone"
            android:id="@+id/preview_container"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/video_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/default_avatar_male"></ImageView>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/vedio_start"></ImageView>

            <TextView
                android:id="@+id/video_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:text="00:00:05"
                android:textColor="@color/white"
                android:textSize="15sp"></TextView>
        </FrameLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.cardview.widget.CardView
        android:id="@+id/customer_avatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|right"
        app:cardBackgroundColor="@color/whiteRed"
        app:cardCornerRadius="100dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="me"
            android:textColor="@color/black"
            android:textStyle="bold">
        </TextView>
    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>