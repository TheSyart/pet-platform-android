<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F4F4F4F4">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="宠 物 商 城"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center_horizontal|center_vertical">
        </TextView>
    </androidx.appcompat.widget.Toolbar>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/nav_recycler"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#F4F4F4F4"
            android:layout_gravity="center">
        </androidx.recyclerview.widget.RecyclerView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/commodity_recycler"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        </androidx.recyclerview.widget.RecyclerView>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F4F4F4F4">
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/cart"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="30dp"
                android:src="@drawable/cart">
            </ImageView>
            <TextView
                android:id="@+id/cart_num"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/cart_num"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="top|right"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:visibility="invisible"/>
        </FrameLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/money_symbol">
        </ImageView>

        <TextView
            android:id="@+id/total_price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0"
            android:textSize="20sp"
            android:textColor="@color/whiteOrange"
            android:textStyle="bold">
        </TextView>
        <Button
            android:id="@+id/pay"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:background="@drawable/button_whitered"
            android:text="支 付"
            android:textColor="@color/white"
            android:textStyle="bold">
        </Button>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>